<h2  class="page-header"><%= book.title%></h2>
<div>
    <label>Publish Date: <%= book.publishDate.toISOString().split('T')[0]%></label>
</div>
<div>
    <label>Author: <%= book.author.name%></label>
    <a href="/authors/<%= book.author.id%>">View</a>
</div>
<div>
    <label>Page Count: <%= book.pageCount%></label>
</div>
<div>
    <img height="150" width="100" src="<%= book.coverImagePath %>">
</div>
<div>
    <text>Description: <%= book.description%></text>
</div>

<a href="/books/<%= book.id%>/edit">Edit</a>
<%- include('../partials/deleteform.ejs', {url: `/books/${book.id}`})%>