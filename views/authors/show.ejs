<h2><%= author.name%></h2>
<div>
<a href="/authors/<%= author.id%>/edit">Edit</a>
<%- include('../partials/deleteform.ejs', { url: `/authors/${ author.id }` }) %>
</div>
<h2>Books by Author</h2>
<div>
    <% books.forEach(book => { %>
        <img height="150" width="100" src="<%= book.coverImagePath %>">
        <a href="/books/<%= book.id%>">View</a>
    <% }) %>
</div>